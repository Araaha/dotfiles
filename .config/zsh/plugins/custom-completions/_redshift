#compdef redshift

_arguments \
         '*:file:_files' \
		'-h[Display help message.]' \
		'-v[Enable verbose output.]' \
		'-V[Show program version.]' \
		'-b[Screen brightness to apply (between 0. 1 and 1. 0).]' \
		'-c[Load settings from specified configuration file.]' \
		'-g[Additional gamma correction to apply.]' \
		'-l[Your current location, in degrees, given as floating point numbers, towards n…]' \
		'-m[Method to use to set color temperature (Use "-m list" to see available method…]' \
		'-o[One-shot mode (do not continuously adjust color temperature).]' \
		'-O[One-shot manual mode (set color temperature).]' \
		'-p[Print mode (only print parameters and exit).]' \
		'-P[Reset existing gamma ramps before applying new color effect.]' \
		'-x[Reset mode (remove adjustment from screen).]' \
		'-r[Disable fading between color temperatures.]' \
		'-t[Color temperature to set at daytime/night.]'
